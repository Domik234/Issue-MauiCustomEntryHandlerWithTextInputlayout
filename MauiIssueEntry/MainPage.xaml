<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiIssueEntry.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MauiIssueEntry.Controls">

    <ScrollView>
        <StackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="-- MAUI Entry ---" />

            <!--  MAUI ENTRY  -->
            <Entry Placeholder="Placeholder test" Text="Text test" />

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="-- Custom Entry ---" />

            <!--  CUSTOM ENTRY  -->
            <controls:CEntry Placeholder="Ahoj" Text="Test" />

        </StackLayout>
    </ScrollView>

</ContentPage>
